#!/usr/bin/env ruby
require 'gli'
require 'fileutils'
begin # XXX: Remove this begin/rescue before distributing your app
require 'telApp'
rescue LoadError
  STDERR.puts "In development, you need to use `bundle exec bin/telApp` to run your app"
  STDERR.puts "At install-time, RubyGems will make sure lib, etc. are in the load path"
  STDERR.puts "Feel free to remove this message from bin/telApp now"
  exit 64
end

include GLI::App

program_desc 'Describe your application here'

version TelApp::VERSION

# Use argument validation
arguments :strict

desc 'Describe some switch here'


desc 'Afficher un contact'
arg_name '[fichier...]'
command :afficher do |c|
  c.action do |global_options,options,args|
    nom_fichier=args[0]
    TelApp.afficher(nom_fichier)
  end
end


  desc 'ajouter un contact'
  arg_name 'nom prenom telephone [fichier...]'
  command :ajouter do |c|
    c.action do |global_options,options,args|
      nom,prenom,telephone, nom_fichier=args[0..4]
      TelApp.ajouter(nom,prenom,telephone,nom_fichier)
    end
  end

desc 'rechercher un contact'
arg_name 'nom [fichier...]'
command :rechercher do |c|
  c.action do |global_options,options,args|
    nom =args[0]
    nom_fichier=args[1]
    TelApp.rechercher(nom,nom_fichier)

  end

end

desc 'Supprimer un contact'
arg_name 'nom prenom [fichier...]'
command :supprimer do |c|
  c.action do |global_options,options,args|
    nom,prenom,nom_fichier=args[0..3]

    TelApp.supprimer(nom,prenom,nom_fichier)

  end

end

exit run(ARGV)
